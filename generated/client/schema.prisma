generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}

model GoogleUsers {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  image    String?
  email    String  @unique
  provider String
  name     String
}

model Payment {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  order_id       String  @unique
  amount         Int
  status         String?
  reciept        String
  payment_amount Float?
  currency       String
  attempts       Int?
}
